<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="agalloExamen.Views.resumen"
             Title="resumen">
    <ScrollView>
        <VerticalStackLayout>
            <Label Text="Usuario conectado: {Binding Usuario}" />
            <Label Text="RESUMEN" FontSize="22" HorizontalOptions="Center" />

            <Grid RowDefinitions="*,*,*,*,*,*,*,*" ColumnDefinitions="*,*">
                <Label Text="Nombre" Grid.Row="0" Grid.Column="0" />
                <Label Text="{Binding Nombre}" Grid.Row="0" Grid.Column="1" />

                <Label Text="Apellido" Grid.Row="1" Grid.Column="0" />
                <Label Text="{Binding Apellido}" Grid.Row="1" Grid.Column="1" />

                <Label Text="VA" Grid.Row="2" Grid.Column="0" />
                <Label Text="{Binding VA}" Grid.Row="2" Grid.Column="1" />

                <Label Text="Fecha" Grid.Row="3" Grid.Column="0" />
                <Label Text="{Binding Fecha}" Grid.Row="3" Grid.Column="1" />

                <Label Text="Ciudad" Grid.Row="4" Grid.Column="0" />
                <Label Text="{Binding Ciudad}" Grid.Row="4" Grid.Column="1" />

                <Label Text="Monto Inicial" Grid.Row="5" Grid.Column="0" />
                <Label Text="{Binding Inicial}" Grid.Row="5" Grid.Column="1" />

                <Label Text="Cuota Mensual" Grid.Row="6" Grid.Column="0" />
                <Label Text="{Binding Cuota}" Grid.Row="6" Grid.Column="1" />

                <Label Text="Pago Total" Grid.Row="7" Grid.Column="0" />
                <Label Text="{Binding PagoTotal}" Grid.Row="7" Grid.Column="1" />
            </Grid>

            <Button x:Name="btnCerrarSesion" Text="Cerrar SesiÃ³n" Clicked="btnCerrarSesion_Clicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>