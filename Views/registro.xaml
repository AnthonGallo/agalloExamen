<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="agalloExamen.Views.registro"
             Title="registro">
    <ScrollView>
        <VerticalStackLayout Padding="20">
            <Label x:Name="lblUsuario" />
            <Label Text="REGISTRO" FontSize="22" TextColor="Blue" HorizontalOptions="Center" />

            <Grid ColumnDefinitions="*,*,*" RowDefinitions="*,*">
                <Label Text="Nombre" Grid.Column="0" Grid.Row="0" />
                <Label Text="Apellido" Grid.Column="1" Grid.Row="0" />
                <Label Text="VA" Grid.Column="2" Grid.Row="0" />

                <Entry x:Name="txtNombre" Grid.Column="0" Grid.Row="1" />
                <Entry x:Name="txtApellido" Grid.Column="1" Grid.Row="1" />
                <Picker x:Name="pickerVA" Grid.Column="2" Grid.Row="1">
                    <Picker.ItemsSource>
                        <x:Array Type="x:Int32">
                            <x:Int32>500</x:Int32>
                            <x:Int32>750</x:Int32>
                            <x:Int32>1000</x:Int32>
                        </x:Array>
                    </Picker.ItemsSource>
                </Picker>
            </Grid>

            <Grid ColumnDefinitions="*,*" RowDefinitions="*,*,*,*">
                <Label Text="Fecha" Grid.Row="0" Grid.Column="0" />
                <DatePicker x:Name="fecha" Grid.Row="0" Grid.Column="1" />

                <Label Text="Ciudad" Grid.Row="1" Grid.Column="0" />
                <Picker x:Name="pickerCiudad" Grid.Row="1" Grid.Column="1">
                    <Picker.ItemsSource>
                        <x:Array Type="x:String">
                            <x:String>Quito</x:String>
                            <x:String>Guayaquil</x:String>
                            <x:String>Cuenca</x:String>
                        </x:Array>
                    </Picker.ItemsSource>
                </Picker>

                <Label Text="Monto Inicial" Grid.Row="2" Grid.Column="0" />
                <Entry x:Name="txtInicial" Grid.Row="2" Grid.Column="1" IsReadOnly="True" />

                <Button x:Name="btnCalcularPagoMensual" Text="Calcular Pago mensual" Grid.Row="3" Grid.Column="0" Clicked="btnCalcularPagoMensual_Clicked" />
                <Entry x:Name="txtCuota" Grid.Row="3" Grid.Column="1" IsReadOnly="True" />
            </Grid>

            <Button x:Name="btnVerResumen" Text="Ver Resumen" Clicked="btnVerResumen_Clicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>