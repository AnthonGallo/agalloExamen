<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="agalloExamen.Views.login"
             Title="login">
    <VerticalStackLayout Padding="25" Spacing="20">
        <Image Source="ups.png" HeightRequest="100" />
        <Label Text="Login" FontSize="20" TextColor="Red" HorizontalOptions="Center" />
        <Grid RowDefinitions="*,*,*" ColumnDefinitions="*,*">
            <Entry x:Name="txtUsuario" Placeholder="Usuario" Grid.Row="0" Grid.ColumnSpan="2" />
            <Entry x:Name="txtClave" Placeholder="Contraseña" IsPassword="True" Grid.Row="1" Grid.ColumnSpan="2" />
        </Grid>
        <Button x:Name="btnInicio" Text="Iniciar Sesión" Clicked="btnInicio_Clicked" />
        <Button x:Name="btnAcercaDe" Text="Acerca de" Clicked="btnAcercaDe_Clicked" />
    </VerticalStackLayout>
</ContentPage>